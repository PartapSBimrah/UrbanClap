<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.webcreo.nirmal.mukthi">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Google API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityMain"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivitySearch"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityHomeService"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityHomeServices"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityLoginEmail"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityLoginPhone"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityRegister"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityLoginEmail"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityLoginPhone"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityHomeServices"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityMain"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityMore"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityMain"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityRealEstate"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityMain"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityCart"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityMain"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityAddress"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityCart"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityShedule"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityAddress"
            android:launchMode="singleTop"></activity>
        <activity android:name="com.webcreo.nirmal.mukthi.temp.activity.ActivityOrderSummary"
            android:screenOrientation="portrait"
            android:parentActivityName=".temp.activity.ActivityShedule"
            android:launchMode="singleTop"></activity>
    </application>
</manifest>